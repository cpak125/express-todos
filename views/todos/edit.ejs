<% - include('../partials/header') %>

<h1>Edit Todo</h1>
<form action="/todos/<%= todo.id %>?_method=PUT" method="POST" autocomplete="off">
  <input type="text" name="todo" value="<%= todo.todo %>">
  <br><label><input name="done" type="checkbox" <% todo.done ? 'checked' : '' %>>Completed?</label>
  <br>
  <button type="submit">Save Changes</button>
</form>
<a href="/todos/<%= todo.id %>"><button>Cancel</button></a>

<% - include('../partials/footer') %>